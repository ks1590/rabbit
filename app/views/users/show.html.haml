.container
  .row
    .col-lg-4
      .card
        .card-body
          .d-flex.flex-column.align-items-center.text-center
            .circle-avatar
              - if @user.image && @user.image.url
                = image_tag @user.image.url(:thumb100), class: "img-circle"
              - else
                = image_tag 'default.png'
          %hr.my-4/
          %ul.list-group.list-group-flush
            %li.list-group-item.d-flex.justify-content-between.align-items-center.flex-wrap
              .mb-0
                %p ユーザー名：
              .mb-0
                %p #{@user.name}
          %hr.my-4/
          %ul.list-group.list-group-flush
            %li.list-group-item.d-flex.justify-content-between.align-items-center.flex-wrap
              .mb-0
                %p メールアドレス：
              .mb-0
                %p #{@user.email}
          %ul.list-group.list-group-flush
            %li.list-group-item.d-flex.justify-content-between.align-items-center.flex-wrap
              = link_to "アカウント編集", edit_user_registration_path
    .col-lg-8
      .card
        .card-body
          %h3 レコード一覧
          .table-responsive
            %table.table.text-nowrap
              %thead.thead-dark
                %tr
                  %th{:scope => "col"} 日付
                  %th{:scope => "col"} 支払方法
                  %th{:scope => "col"} カテゴリ
                  %th{:scope => "col"} 金額
                  %th{:scope => "col"} メモ
                %tbody  
                  - @trades.each do |trade|          
                    %tr
                      %th{:scope => "row"}= trade.event_on
                      %td= trade.payment.name
                      %td= trade.category.name
                      %td= number_to_currency(trade.amount, local: "jp")
                      %td= trade.memo    